<%- include('../partials/header') %> <%- include('../partials/nav') %>
<section class="section container is-max-desktop">
  <nav>
    <h1 style="float: left; font-size: 40px"><strong><%= title %></strong></h1>
    <% if (user) { %>
    <a
      href="/cookbooks/<%= cookbook._id %>/forewordpage/update"
      style="float: right; padding-top: 20px"
      onMouseOver="this.style.color='#5458D2 '"
      onMouseOut="this.style.color='#008000'"
      class="tag is-white"
      title="Update foreword Page"
      ><i class="fas fa-edit fa-2x"></i
    ></a>
    <%}%>
    <a
      href="/cookbooks/<%= cookbook._id %>"
      style="float: right; font-size: 20px; padding: 10px"
      >Back to Your Book</a
    >
  </nav>

  <div class="foreword-page">
    <br /><br />
    <!-- <h1 style="text-align: left; font-size: 20px">
      <strong>Foreword</strong>
    </h1> -->
    <br /><br />
    <div
      style="
        position: relative;
        text-align: justify;
        text-justify: inter-word;
        font-size: 20px;
        padding: 40px;
      "
    >
      <p><%= cookbook.foreword %></p>
    </div>
  </div>
</section>
<%- include('../partials/footer') %>
