<%- include('../partials/header') %> <%- include('../partials/nav') %>
<section class="section container is-max-desktop">
  <nav>
    <a href="/cookbooks/<%= cookbook._id %>">Go Back to Your Book</a
    ><span class="space"></span>
  </nav>
  <br /><br />
  <h1>Book Details</h1>
  <br /><br />
  <p>Cookbook Title: <%= cookbook.title %></p>
  <p>Cookbook Subtitle: <%= cookbook.subtitle %></p>
  <p>Cover Page</p>
  <br /><br />
  <div class="cover-page">
    <h1 class="cover-page-text"><%= cookbook.title %></h1>
    <img src="<%= cookbook.coverImageURL %>" class="cover-image" />
  </div>
  <br /><br />
  <% if (user) { %>
  <a href="/cookbooks/<%= cookbook._id %>/coverpage/update">Update Cover Page</a
  ><span class="space"></span>
</section>

<%}%> <%- include('../partials/footer') %>
